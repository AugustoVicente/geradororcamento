<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
        <link rel="icon" href="../../static/img/Logo.PNG">
        <link rel="stylesheet" type="text/css" href="../../static/css/index.css">
        <link rel="stylesheet" type="text/css" href="../../static/css/cadastros.css">
        <link rel="stylesheet" type="text/css" href="../../static/css-forms/util.css">
        <link rel="stylesheet" type="text/css" href="../../static/css-forms/custom_main.css">
        <link rel="stylesheet" type="text/css" href="../../static/css-table/main.css">
        <link rel="stylesheet" type="text/css" href="../../static/css-table/util.css">
		<title>Imprimir Orçamento</title>
    </head>
    <body>
        <!-- Show confirm messages -->
        <% if (exclui) { %>
            <script>alert("Orçamento excluído!")</script>
        <% } %>
        <div onclick="document.location.href = '../orcamento';" class="div_voltar">
            <img class="back_image" src="../../static/img/back.png" alt="">
            <p  class="text_voltar">Voltar</p>
        </div>
        <br/>
        <br/>
        <div class="container-table100">
            <div class="wrap-table100">
                <div class="table100 ver1">
                    <div class="wrap-table100 js-pscroll">
                        <table>
                            <tbody id="table">
                                <tr>
                                    <td>Data</td>
                                    <td>Cliente</td>
                                    <td>Quantidade de itens</td>
                                    <td>Preço</td>
                                    <td>Excluir</td>
                                    <td>Imprimir</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="contact1-form validate-form form_principal">
            <div class="wrap-input1 validate-input" data-validate="Selecione um fornecedor">
                <div class="custom-select">
                    <select class="input1" onchange="troca_filtro();" id="filtro">
                        <option value="0" disabled>Selecione o filtro</option>
                        <option selected value="1">Data</option>
                        <option value="2">Cliente</option>
                    </select>
                </div>
            </div>
            <div class="wrap-input1 validate-input">
                <input class="input1" type="date" id="date" placeholder="Filtro">
            </div>
            <div class="wrap-input1 validate-input" id="div_cliente">
                <div class="custom-select">
                    <select class="input1 teste" id="cliente">
                        <option value="0" selected disabled>Selecione o cliente</option>
                         <!-- Loads the options -->
                        <% if (data) { %>
                            <% data.forEach(row => { %>
                                <option value="<%=row.id %>"><%= row.id+" - "+row.nome+" ("+row.cpfcnpj+")" %></option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="container-contact1-form-btn">
                <button class="contact1-form-btn" onclick="filtrar();">
                    <span>
                        Filtrar
                    </span>
                </button>
            </div>
            <br/>
        </div>
        <br/>
		<script src="../../static/js/jquery-3.3.1.min.js" type="text/javascript"></script>
        <script src="../../static/js/geral.js"></script>
        <script src="../../static/js/orcamento/impressao.js"></script>
        <!-- Clear session -->
        <script>
            sessionStorage.clear();
            var data = new Date();
            data = get_date2(data.toISOString());
            document.getElementById("date").value = data;
            sessionStorage.clear();
        </script>
    </body>
    <footer><img src="../../static/img/Logo.PNG" class="logo"></footer>
</html>